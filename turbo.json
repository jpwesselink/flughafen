{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"typecheck": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": [
				"src/**",
				"generated/types/**",
				"tsconfig.json"
			]
		},
		"lint": {
			"cache": true,
			"inputs": [
				"src/**",
				"biome.json"
			]
		},
		"build": {
			"cache": true,
			"dependsOn": ["^build", "typecheck", "lint"],
			"inputs": [
				"src/**",
				"generated/types/**",
				"tsconfig.json",
				"tsup.config.ts",
				"package.json"
			],
			"outputs": ["dist/**"]
		},
		"test": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": [
				"src/**",
				"generated/types/**",
				"schemas/**",
				"vitest.config.ts",
				"tsconfig.json"
			],
			"outputs": ["coverage/**"]
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"test:coverage": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": [
				"src/**",
				"generated/types/**",
				"vitest.config.ts",
				"tsconfig.json"
			],
			"outputs": ["coverage/**"]
		},
		"clean": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	},
	"globalEnv": [
		"NODE_ENV",
		"CI"
	],
	"globalDependencies": [
		"package.json",
		"pnpm-lock.yaml"
	]
}
