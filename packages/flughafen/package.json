{
	"name": "flughafen",
	"version": "1.1.0",
	"type": "module",
	"description": "Type-safe, fluent GitHub Actions workflow builder for TypeScript",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"module": "./dist/esm/index.js",
	"bin": {
		"flughafen": "./bin/flughafen.js"
	},
	"author": "",
	"keywords": [
		"github-actions",
		"workflow",
		"ci-cd",
		"typescript",
		"builder-pattern",
		"fluent-api",
		"type-safe"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/jpwesselink/flughafen.git"
	},
	"bugs": {
		"url": "https://github.com/jpwesselink/flughafen/issues"
	},
	"homepage": "https://github.com/jpwesselink/flughafen#readme",
	"files": [
		"README.md",
		"LICENSE.md",
		"CHANGELOG.md",
		"package.json",
		"dist",
		"bin"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"license": "MIT",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "pnpm run typecheck && tsup",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"lint": "biome check src --no-errors-on-unmatched",
		"schemas": "pnpm run fetch-schemas && pnpm run generate-types",
		"fetch-schemas": "tsx scripts/fetch-schemas.ts",
		"generate-types": "tsx scripts/generate-types.ts",
		"clean:schemas": "rm -rf schemas/*.schema.json generated/types/*.d.ts",
		"regen:schemas": "pnpm run clean:schemas && pnpm run fetch-schemas && pnpm run generate-types",
		"prebuild": "pnpm run generate-types",
		"cli:synth": "node bin/flughafen.js synth",
		"demo:synth": "pnpm run cli:synth examples/simple-workflow.ts"
	},
	"dependencies": {
		"ajv": "^8.12.0",
		"chalk": "^5.4.1",
		"change-case": "^4.1.2",
		"chokidar": "^4.0.3",
		"cli-spinners": "^3.2.0",
		"esbuild": "^0.24.2",
		"ora": "^8.2.0",
		"snake-case": "^3.0.4",
		"yaml": "^2.2.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^20.0.0",
		"@types/yargs": "^17.0.33",
		"@vitest/coverage-v8": "^3.2.3",
		"js-yaml": "^4.1.0",
		"json-schema-to-typescript": "^15.0.4",
		"node-fetch": "^3.3.2",
		"tsup": "^6.7.0",
		"tsx": "^4.20.3",
		"turbo": "^2.5.4",
		"typescript": "^5.0.3",
		"vitest": "^3.2.3"
	}
}
